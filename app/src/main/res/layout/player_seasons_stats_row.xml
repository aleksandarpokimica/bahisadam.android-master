<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPSSRCompetitionLogo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2dp"
        app:srcCompat="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tvPSSRCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premier Lig 16/17"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"/>


    <TextView
        android:id="@+id/tvPSSRMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="52dp"/>

    <TextView
        android:id="@+id/tvPSSRGoalsScored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvPSSRAssists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvPSSRYellowCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvPSSRRedCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>

</LinearLayout>
