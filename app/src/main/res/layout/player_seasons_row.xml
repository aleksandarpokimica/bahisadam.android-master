<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPSRPlayerCareerStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:background="#EEE"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ivPSRTeamLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/playerInfoContainer"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/ivYellowCards"/>

        <TextView
            android:id="@+id/tvPSRTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:text=""
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPSRCompetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/league_year"/>

        <TextView
            android:id="@+id/tvPSRMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/match"/>

        <ImageView
            android:id="@+id/ivPSRGoals"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/playerInfoContainer"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/ivPSRAssists"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/playerInfoContainer"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/ivPSRYellowCards"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/playerInfoContainer"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/ivPSRRedCards"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/playerInfoContainer"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lvPlayerSeasonsStats">

            </ListView>


</LinearLayout>