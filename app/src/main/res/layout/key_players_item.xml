<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rootLayout"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="100dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp">

                <ImageView
                        android:id="@+id/image_squad"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/kit_striped" />

                <ImageView
                        android:id="@+id/image_squad1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/kit_striped1" />

                <ImageView
                        android:id="@+id/image_squad2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/kit_striped2" />

                <TextView
                        android:id="@+id/text_view_squad_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="6dp" />
            </FrameLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:textSize="10sp"
                        android:gravity="bottom" />
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/goals"
                            android:textSize="11sp"
                            android:width="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            />
                    <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/fball" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/assists"
                            android:textSize="11sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:width="20dp"
                            android:textStyle="bold"
                            />
                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_assist" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
