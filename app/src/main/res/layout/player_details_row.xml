<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/tvRoleSeason"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:text="2017-Melvut"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/ivTeamLogoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/tvRoleSeason"
        android:layout_toRightOf="@+id/tvRoleSeason"
        app:srcCompat="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tvRoleTeam"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tvRoleContractType"
        android:layout_toStartOf="@+id/tvRoleContractType"
        android:text="Manchester United"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tvRoleContractType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"

        android:text="Oyuncu"
        android:textSize="12dp"/>


</LinearLayout>