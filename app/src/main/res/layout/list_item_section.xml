<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:background="@color/sectionBackground"
>
    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_title_logo_img"
            android:layout_marginLeft="@dimen/grid_span_margen"
            android:layout_marginRight="@dimen/grid_span_margen"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/grid_span_margen"
            android:layout_marginRight="@dimen/grid_span_margen"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_title_logo_img"
            android:singleLine="true"
            android:text="Section Title"
            android:textColor="@color/headerTextColor"
            tools:ignore="UnusedAttribute" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_span_margen"
                android:layout_marginRight="@dimen/grid_span_margen"
                android:layout_centerInParent="true"
                android:textSize="13sp"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:id="@+id/total_league_match"/>
        <LinearLayout android:layout_width="50dp" android:layout_height="match_parent" android:id="@+id/league_detail" android:layout_alignParentRight="true">
            <TextView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="@dimen/grid_span_margen"
                    android:layout_marginRight="@dimen/grid_span_margen"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_right"
                    android:textAlignment="textEnd"
                    android:id="@+id/right_arrow"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"/>
</LinearLayout>
