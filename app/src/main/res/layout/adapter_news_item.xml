<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/news.item.container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="0.5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/news.images"/>
            <TextView
                android:id="@+id/news.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/news_items_title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/news.images"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/news.images"
                android:layout_below="@+id/news.title"
                android:layout_marginLeft="9dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:id="@+id/news.summery"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/news.time"
                android:layout_toRightOf="@+id/news.images"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="8dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>