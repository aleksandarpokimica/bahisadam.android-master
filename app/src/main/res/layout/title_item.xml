<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_padding_top_bottom"
        android:layout_marginTop="@dimen/header_padding_top_bottom"
        android:layout_centerHorizontal="true"
        android:textColor="#6b7280"
        android:textStyle="bold" />

    <View
        android:id="@+id/leftLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@id/titleLabel"
        android:layout_toStartOf="@id/titleLabel"
        android:background="#dbe2e6" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/titleLabel"
        android:layout_toEndOf="@id/titleLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="#dbe2e6" />
</RelativeLayout>