<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f7f7f7"
                android:layout_gravity="center"
                android:gravity="center">
            <TextView
                    android:id="@+id/stadium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="Genel Bilgiler"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:background="#dfdfdf"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_gravity="left"
                android:gravity="left">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:width="160dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="Stadyum"/>
            <TextView
                    android:id="@+id/stadium_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="-"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#dfdfdf"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_gravity="left"
                android:gravity="left">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:width="160dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="Kapasite"/>
            <TextView
                    android:id="@+id/stadium_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="-"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#dfdfdf"/>
        <LinearLayout
                android:id="@+id/referee_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:width="160dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="Hakem"/>
            <TextView
                    android:id="@+id/referee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="-"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#dfdfdf"/>
        <LinearLayout
                android:id="@+id/other_match_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="160dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="İlk Maç"/>
            <TextView
                    android:id="@+id/other_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="-"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#dfdfdf"/>
        <LinearLayout
                android:id="@+id/tv_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:width="160dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="TV"/>
            <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_padding_top_bottom"
                    android:layout_marginBottom="@dimen/header_padding_top_bottom"
                    android:textColor="@color/headerTextColor"
                    android:text="-"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>